<%= form_for(@song) do |s| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @song.errors.full_messages.each do |m| %>
                    <li><%= m %></li>
                <%end %>  
            </ul>
        </div>
    <%end%>

    <div class="field">
        <%= s.label :title %>
        <%= s.text_field :title %>
    </div>

     <div class="field">
        <%= s.label :released %>
        <%= s.check_box :released %>
    </div>

     <div class="field">
        <%= s.label :release_year %>
        <%= s.number_field :release_year %>
    </div>

     <div class="field">
        <%= s.label :artist_name %>
        <%= s.text_field :artist_name %>
    </div>

     <div class="field">
        <%= s.label :genre %>
        <%= s.text_field :genre %>
    </div>

    <div class="actions">
        <%= s.submit %>
    </div>

<%end%>
